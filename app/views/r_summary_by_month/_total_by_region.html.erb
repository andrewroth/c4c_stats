<table class="t1">
    <tr>
        <td class="t2">
        </td>
        <% @months.each do |month| -%>
        <td>
            <span class="title1"><%= sprintf "%s", month.month_desc %></span>
        </td>
        <% end %>
        <td>
            <span class="title1">Total</span>
        </td>
    </tr>
