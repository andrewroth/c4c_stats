<table class="t1">
    <tr>
        <td class="t2">
        </td>
        <% @months.each do |month| -%>
        <td>
            <span class="title1"><%= sprintf "%s", month.description %></span>
        </td>
        <% end %>
        <td>
            <span class="title1">Total</span>
        </td>
    </tr>
    <tr>
        <td>
            Spiritual Conversations by Staff
        </td>
        <% total = 0 %>
        <% @months.each do |month| -%>
        <% result = Week.find_stats_month(month.id,@region_id,sp_conv) %>
        <% total += result %>
        <td>
            <center>
                <%= sprintf "%s", result %>
            </center>
        </td>
        <% end %>
        <td>
            <center>
                <%= sprintf "%s", total %>
