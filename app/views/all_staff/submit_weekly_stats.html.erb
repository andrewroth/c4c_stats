<!-- Title - Start-->
<p>
    <span class="heading">Submit Weekly Stats</span>
</p>
<!-- Title - End -->

<!-- Form - Start -->
<div class="form2">
    <p>
        <% form_for :stats, :url => { :action => :submit_weekly_stats } do |form| %>
        Please enter your stats from this week. First, select the week. Second, select the campus. Definitions can be found below.
        <br/>
        <br/>
        <p>
            <%= form.label :week, "Week Ending:" %>
            <%= form.select :week, @weeks, :selected => @weekSelected %>
        </p>
        <p>
            <%= form.label :campus, "Campus:" %>
            <%= form.select :campus, @campuses, :prompt => "Select a Campus" %>
        </p>
        <p>
            <span class="bold"><%= form.label :sp_conv, "# 1-1 Spiritual Conversations:", :value => "0" %></span>
            <%= form.text_field :sp_conv, :size => 4 %>
        </p>
        <p>
            <span class="bold"><%= form.label :sp_conv_std, "# 1-1 Spiritual Conversations (By Disciples):", :value => "0" %></span>
            <%= form.text_field :sp_conv_std, :size => 4 %>
        </p>
        <p>
            <span class="bold"><%= form.label :gos_pres, "# 1-1 Gospel Presentations:", :value => "0" %></span>
            <%= form.text_field :gos_pres, :size => 4 %>
        </p>
        <p>
            <span class="bold"><%= form.label :gos_pres_std, "# 1-1 Gospel Presentations (By Disciples):", :value => "0" %></span>
            <%= form.text_field :gos_pres_std, :size => 4 %>
        </p>
        <p>
            <span class="bold"><%= form.label :hs_pres, "# 1-1 Holy Spirit Presentations:", :value => "0" %></span>
            <%= form.text_field :hs_pres, :size => 4 %>
        </p>
        <p>
            <%= submit_tag "Update" , :class => "submit" %>
        </p>
        <br/>
        <% end %>
    </p>
</div>
<!-- Form - End -->

<!-- Main Content - Start -->
