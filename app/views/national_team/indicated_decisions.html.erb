<!-- Title - Start-->
<p>
    <span class="heading">Indicated Decisions</span>
</p>
<!-- Title - End -->

<!-- Form - Start -->
<div class="form1">
    <p>
        <% form_for :semester, :url => { :action => :indicated_decisions } do |form| %>
        <fieldset>
            <legend>
                <span class="title1">Please Select a Semester</span>
            </legend>
            <p>
                <%= form.label :semester, "Semester:" %>
                <%= form.select :semester, @semesters, :selected => @semesterSelected %>
            </p>
            <p>
                <%= submit_tag "Submit" , :class => "submit" %>
            </p>
        </fieldset>
        <br/>
        <% end %>
    </p>
</div>
<!-- Form - End -->

<!-- Main Content - Start -->
<div id="results" align="center">
    <p>
        <span class="title1">Indicated Decisions during <%= sprintf("%s", @semesterSelected) %></span>
    </p>
    <p>
        <%= render :partial => "indicated_decisions_total" %>
        <br/>
    </p>
  </div>
<!-- Main Content - End -->
  
<p>
    <span class="text"><a href="/stats">Go Back</a></span>
</p>
